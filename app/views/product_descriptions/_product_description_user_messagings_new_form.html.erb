<%= form_with(model: @user_messaging, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :recipient_id %>

    <%= f.collection_select :recipient_id, UserDatum.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sender_id %>

    <%= f.text_field :sender_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :message_data %>

    <%= f.text_field :message_data, class: "form-control" %>
  </div>

  <%= f.hidden_field :product_id, value: @product_description.id %>

  <%= f.submit "Create user messaging", class: "btn btn-block btn-outline-secondary" %>
<% end %>
