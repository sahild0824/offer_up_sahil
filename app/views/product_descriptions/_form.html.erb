      <% else %>
        <% sale_address_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sale_address %>
    <%= f.number_field :sale_address, class: sale_address_class, placeholder: "Enter sale address" %>
    <% if sale_address_was_invalid %>
      <% product_description.errors.full_messages_for(:sale_address).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_category_class = "form-control" %>
    <% product_category_was_invalid = product_description.errors.include?(:product_category) %>

    <% if was_validated %>
      <% if product_category_was_invalid %>
        <% product_category_class << " is-invalid" %>
      <% else %>
        <% product_category_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_category %>
    <%= f.number_field :product_category, class: product_category_class, placeholder: "Enter product category" %>
    <% if product_category_was_invalid %>
      <% product_description.errors.full_messages_for(:product_category).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_image_class = "form-control" %>
    <% product_image_was_invalid = product_description.errors.include?(:product_image) %>

    <% if was_validated %>
      <% if product_image_was_invalid %>
        <% product_image_class << " is-invalid" %>
      <% else %>
        <% product_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_image %>
    <%= f.number_field :product_image, class: product_image_class, placeholder: "Enter product image" %>
    <% if product_image_was_invalid %>
      <% product_description.errors.full_messages_for(:product_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
