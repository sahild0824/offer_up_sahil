<% was_validated = product_description.errors.any? %>

<%= form_with(model: product_description, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_of_item_class = "form-control" %>
    <% name_of_item_was_invalid = product_description.errors.include?(:name_of_item) %>

    <% if was_validated %>
      <% if name_of_item_was_invalid %>
        <% name_of_item_class << " is-invalid" %>
      <% else %>
        <% name_of_item_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name_of_item %>
    <%= f.number_field :name_of_item, class: name_of_item_class, placeholder: "Enter name of item" %>
    <% if name_of_item_was_invalid %>
      <% product_description.errors.full_messages_for(:name_of_item).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = product_description.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.number_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% product_description.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% seller_class = "form-control" %>
    <% seller_was_invalid = product_description.errors.include?(:seller) %>

    <% if was_validated %>
      <% if seller_was_invalid %>
        <% seller_class << " is-invalid" %>
      <% else %>
        <% seller_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :seller_id %>
    <%= f.collection_select :seller_id, UserDatum.all, :id, :to_s, {}, class: "form-control" %>
    <% if seller_was_invalid %>
      <% product_description.errors.full_messages_for(:seller).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% sale_address_class = "form-control" %>
