    <%= f.label :sale_status %>
    <%= f.number_field :sale_status, class: sale_status_class, placeholder: "Enter sale status" %>
    <% if sale_status_was_invalid %>
      <% product_description.errors.full_messages_for(:sale_status).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
