<% was_validated = user_datum.errors.any? %>

<%= form_with(model: user_datum, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% username_class = "form-control" %>
    <% username_was_invalid = user_datum.errors.include?(:username) %>

    <% if was_validated %>
      <% if username_was_invalid %>
        <% username_class << " is-invalid" %>
      <% else %>
        <% username_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :username %>
    <%= f.number_field :username, class: username_class, placeholder: "Enter username" %>
    <% if username_was_invalid %>
      <% user_datum.errors.full_messages_for(:username).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = user_datum.errors.include?(:password) %>

    <% if was_validated %>
      <% if password_was_invalid %>
        <% password_class << " is-invalid" %>
      <% else %>
        <% password_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :password %>
    <%= f.number_field :password, class: password_class, placeholder: "Enter password" %>
    <% if password_was_invalid %>
      <% user_datum.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% email_address_class = "form-control" %>
    <% email_address_was_invalid = user_datum.errors.include?(:email_address) %>

    <% if was_validated %>
      <% if email_address_was_invalid %>
        <% email_address_class << " is-invalid" %>
      <% else %>
        <% email_address_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :email_address %>
    <%= f.number_field :email_address, class: email_address_class, placeholder: "Enter email address" %>
    <% if email_address_was_invalid %>
      <% user_datum.errors.full_messages_for(:email_address).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
