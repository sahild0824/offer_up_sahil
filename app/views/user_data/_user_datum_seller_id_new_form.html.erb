<%= form_with(model: @product_description, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name_of_item %>

    <%= f.text_field :name_of_item, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :seller_id, value: @user_datum.id %>

  <div class="form-group">
    <%= f.label :sale_address %>

    <%= f.text_field :sale_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_category %>

    <%= f.text_field :product_category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_image %>

    <%= f.text_field :product_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sale_status %>

    <%= f.text_field :sale_status, class: "form-control" %>
  </div>

  <%= f.submit "Create product description", class: "btn btn-block btn-outline-secondary" %>
<% end %>
