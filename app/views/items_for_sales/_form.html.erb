<% was_validated = items_for_sale.errors.any? %>

<%= form_with(model: items_for_sale, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% seller_name_class = "form-control" %>
    <% seller_name_was_invalid = items_for_sale.errors.include?(:seller_name) %>

    <% if was_validated %>
      <% if seller_name_was_invalid %>
        <% seller_name_class << " is-invalid" %>
      <% else %>
        <% seller_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :seller_name %>
    <%= f.number_field :seller_name, class: seller_name_class, placeholder: "Enter seller name" %>
    <% if seller_name_was_invalid %>
      <% items_for_sale.errors.full_messages_for(:seller_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_class = "form-control" %>
    <% product_was_invalid = items_for_sale.errors.include?(:product) %>

    <% if was_validated %>
      <% if product_was_invalid %>
        <% product_class << " is-invalid" %>
      <% else %>
        <% product_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_id %>
    <%= f.collection_select :product_id, ProductDescription.all, :id, :to_s, {}, class: "form-control" %>
    <% if product_was_invalid %>
      <% items_for_sale.errors.full_messages_for(:product).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_description_class = "form-control" %>
    <% product_description_was_invalid = items_for_sale.errors.include?(:product_description) %>

    <% if was_validated %>
      <% if product_description_was_invalid %>
        <% product_description_class << " is-invalid" %>
      <% else %>
        <% product_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_description %>
    <%= f.number_field :product_description, class: product_description_class, placeholder: "Enter product description" %>
    <% if product_description_was_invalid %>
      <% items_for_sale.errors.full_messages_for(:product_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% price_class = "form-control" %>
    <% price_was_invalid = items_for_sale.errors.include?(:price) %>

    <% if was_validated %>
      <% if price_was_invalid %>
        <% price_class << " is-invalid" %>
      <% else %>
        <% price_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :price %>
    <%= f.number_field :price, class: price_class, placeholder: "Enter price" %>
    <% if price_was_invalid %>
      <% items_for_sale.errors.full_messages_for(:price).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% product_category_class = "form-control" %>
    <% product_category_was_invalid = items_for_sale.errors.include?(:product_category) %>

    <% if was_validated %>
      <% if product_category_was_invalid %>
        <% product_category_class << " is-invalid" %>
      <% else %>
        <% product_category_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product_category %>
    <%= f.number_field :product_category, class: product_category_class, placeholder: "Enter product category" %>
    <% if product_category_was_invalid %>
      <% items_for_sale.errors.full_messages_for(:product_category).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
