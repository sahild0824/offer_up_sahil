<div class="row mb-3">
  <div class="col-md-12">
    <h1 class="display-4">
      Items For Sales

      <%= link_to new_items_for_sale_path, class: "btn btn-lg btn-outline-secondary" do %>
        <i class="fas fa-plus fa-fw"></i>
      <% end %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "items_for_sales/items_for_sales_search_form" %>
  </div>
</div>




<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <div class="card">
      <h1 class="card-header h4 d-flex align-items-center justify-content-between">
        Items For Sales

        <%= link_to new_items_for_sale_path, class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fas fa-plus fa-fw"></i>
        <% end %>
      </h1>

      <div class="list-group list-group-flush">
        <%= render collection: @items_for_sales, partial: "list_item", as: :items_for_sale %>
      </div>
      <div class="card-footer d-flex justify-content-center">
        <%= paginate @items_for_sales, theme: 'twitter-bootstrap-4' %>
      </div>

    </div>
  </div>
</div>
