<div class="card mb-3">
  <h2 class="card-header h4">
    User Messaging #<%= user_messaging.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Recipient</dt>
      <dd>
        <% if @user_messaging.recipient.present? %>
          <%= link_to user_messaging.recipient, user_messaging.recipient %>
        <% end %>
      </dd>

      <dt>Sender</dt>
      <dd><%= user_messaging.sender_id %></dd>

      <dt>Message data</dt>
      <dd><%= user_messaging.message_data %></dd>

      <dt>Product</dt>
      <dd>
        <% if @user_messaging.product.present? %>
          <%= link_to user_messaging.product, user_messaging.product %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user_messaging, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_user_messaging_url(user_messaging), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to user_messaging, method: :delete, data: { confirm: "Do you really want to delete this user_messaging?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user_messaging.updated_at) %> ago
  </div>
</div>
